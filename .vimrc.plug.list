" Plugins list {

    call plug#begin('~/.vim/plugged')

    Plug 'sjl/vitality.vim'
    Plug 'luochen1990/rainbow'
    Plug 'flazz/vim-colorschemes'
    Plug 'vim-airline/vim-airline'
    Plug 'vim-airline/vim-airline-themes'
    Plug 'mhinz/vim-startify', { 'on': 'Startify' }

    Plug 'godlygeek/tabular'
    Plug 'plasticboy/vim-markdown', { 'for': 'markdown' }
    Plug 'mzlogin/vim-markdown-toc', { 'for': 'markdown' }

    Plug 'SirVer/ultisnips' | Plug 'honza/vim-snippets'

    Plug 'tpope/vim-fugitive'
    Plug 'junegunn/vim-easy-align'
    Plug 'bronson/vim-trailing-whitespace', { 'on': 'FixWhitespace' }
    Plug 'Raimondi/delimitMate'
    Plug 'scrooloose/nerdcommenter'
    Plug 'tpope/vim-surround'
    Plug 'nathanaelkane/vim-indent-guides', { 'for': ['shell', 'python',
                                                    \ 'java', 'c', 'cpp'] }
    Plug 'easymotion/vim-easymotion'
    Plug 'scrooloose/nerdtree', { 'on': 'NERDTreeToggle' }
    Plug 'tiagofumo/vim-nerdtree-syntax-highlight', { 'on': 'NERDTreeToggle' }
    " error occurs when tabar enabled
    " Plug 'majutsushi/tagbar', { 'on': 'TagbarToggle' }
    Plug 'ctrlpvim/ctrlp.vim'
    Plug 'Shougo/unite.vim'
    Plug 'tsukkee/unite-help'
    Plug 'ujihisa/unite-colorscheme'
    Plug 'ujihisa/unite-locate'
    Plug 'osyo-manga/unite-filetype'
    Plug 'osyo-manga/unite-quickfix'
    Plug 'osyo-manga/unite-fold'
    Plug 'dracula/vim'
    Plug 'sheerun/vim-polyglot'
    Plug 'scrooloose/syntastic', {'for': ['python', 'c', 'cpp'] }

    function! BuildYCM(info)
        " info is a dictionary with 3 fields
        " - name:   name of the plugin
        " - status: 'installed', 'updated', or 'unchanged'
        " - force:  set on PlugInstall! or PlugUpdate!
        if a:info.status == 'installed' || a:info.force
            !./install.py
        endif
    endfunction

    Plug 'Valloric/YouCompleteMe', { 'do': function('BuildYCM') }


    if filereadable(expand("~/.vimrc.plug.local"))
        source ~/.vimrc.plug.local
    endif

    call plug#end()

" }
